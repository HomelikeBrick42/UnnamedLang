#import "./basic.lang"

proc factorial(n: u64) => u64 {
    if n <= 1 {
        return 1
    } else {
        return n * factorial(n - 1)
    }
}

print_u64(factorial(6))
println()

proc change_value(ptr: ^u64, value: u64) => void {
    ptr^ <- value * 25
}

var foo: u64 <- 5
print_u64(foo)
println()

change_value(&foo, 10)
print_u64(foo)
println()
